@model Rocky.Models.Category;

<form method="post"> @*'Edit View form submit by default to method='post' asp-action='Edit' *@
    
    <input asp-for="Id" type="hidden" />

	<div class="border p-3 m-3 bg-white">
        @*
        'ModelOnly' show errors next to the input linked to model props
        'All' add a summary errors on top of the form
        *@
        <div asp-validation-summary="ModelOnly" class="text-danger" />
       
		<div class="form-group row">
			<h2 class="text-info pl-3">Edit Category</h2>
		</div>

		<div class="row">
            <div class="col-8">
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="DisplayOrder"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DisplayOrder" class="form-control" />
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row py-2">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                           <input type="submit" class="btn btn-info w-100" value="Update" />
                        </div>

                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt mx-2"></i>Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>

        </div>
	</div>

</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


