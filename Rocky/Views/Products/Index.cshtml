@model IEnumerable<Rocky.Models.Product>

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Product List</h2>
		</div>

		<div class="col-6 text-right">
			<a asp-action="Upsert" class="btn btn-primary">
				<i class="fas fa-plus"></i> &nbsp; Create New Product
			</a>
		</div>
	</div>

	<br />
	<br />

	@if (Model.Count() > 0)
	{
		<table class="table table-bordered table-striped" style="width: 100%">
			<thead>
				<tr>
					<th>Product Name</th>
					<th>Price</th>
					<th>Category</th>
					<th>Application Type</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var product in Model)
				{
					<tr>
						<td width="30%">@product.Name</td>
						<td width="10%">@product.Price</td>
						<td width="20%">@product.Category.Name</td>
						<td width="20%">@product.ApplicationType.Name</td>

						<td class="text-center">
							<div class="w-75 btn-group" role="group">
								<a asp-route-Id="@product.Id" asp-action="Upsert" class="btn btn-primary mx-2">
									<i class="fas fa-edit"></i>
								</a>
								<a asp-route-Id="@product.Id" asp-action="Delete" class="btn btn-danger mx-2">
									<i class="fas fa-trash-alt"></i>
								</a>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	}
	else
	{
		<p>No Product exists.</p>
	}
</div>

