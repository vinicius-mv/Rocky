@using Rocky.Utility
@model Rocky.Models.Product;

<form method="post" asp-action="Delete">

	<input asp-for="Id" type="hidden" />

	<div class="border p-3 m-3 bg-white">

		<div class="form-group row">
			<h2 class="text-info pl-3">Delete Product</h2>
		</div>

		<div class="row">
			<div class="col-8">
				<div class="form-group row py-2">
					<div class="col-4">
						<label asp-for="Name"></label>
					</div>
					<div class="col-8">
						<input asp-for="Name" disabled class="form-control" />
					</div>
				</div>

				<div class="form-group row py-2">
					<div class="col-4">
						<label asp-for="Price"></label>
					</div>
					<div class="col-8">
						<input asp-for="Price" disabled class="form-control" />
					</div>
				</div>

				<div class="form-group row py-2">
					<div class="col-4">
						<label asp-for="Description"></label>
					</div>
					<div class="col-8">
						<textarea asp-for="Description" class="tinymce form-control"></textarea>
					</div>
				</div>

				<div class="form-group row py-2">
					<div class="col-4">
						<label asp-for="CategoryId"></label>
					</div>
					<div class="col-8">
						<input asp-for="Category.Name" disabled class="form-control" />
					</div>
				</div>

				<div class="form-group row py-2">
					<div class="col-4">
						<label asp-for="ApplicationTypeId"></label>
					</div>
					<div class="col-8">
						<input asp-for="ApplicationType.Name" disabled class="form-control" />
					</div>
				</div>

				<div class="form-group row py-2">
					<div class="col-8 offset-4 row">
						<div class="col">
							<input type="submit" class="btn btn-danger w-100" value="Delete" />
						</div>

						<div class="col">
							<a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt mx-2"></i>Back</a>
						</div>
					</div>
				</div>

			</div>
			<div class="col-4">
					<img src="@WebConstants.Paths.ProductImages@Model.Image" style="border-radius: 10px; border: 1px solid #bbb; width: 100%" />
			</div>

		</div>
	</div>

</form>

<script>

	// TinyMce Initilizer
	tinymce.init({
		selector: '.tinymce'
	});

	
</script>
