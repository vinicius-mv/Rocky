@model Rocky.ViewModels.HomeVM;

<div class="container mt-3">
	<div class="text-center">

		<button class="btn btn-dark filter-button" data-filter="all">All</button>

		@foreach (var category in Model.Categories)
		{
			<button class="btn btn-outline-secondary filter-button" data-filter="@category.Name.Replace(' ', '_')">
				@category.Name
			</button>
		}
	</div>
	<br />

	<div class="row">
		@foreach (var product in Model.Products)
		{
			// display all products
			<partial name="_ProductCard" model="@product" />
		}
	</div>

</div>

@section Scripts {

<script>

    $(document).ready(function(){

		$(".filter-button").click(function(event){
			
			let filterValue = $(this).attr("data-filter");
			
			if(filterValue == "all")
			{
				$('.filter').show('1000');
			}
			else
			{
				$(".filter").not('.' + filterValue).hide('3000');
				$('.filter').filter('.' + filterValue).show('3000');
			}
		});

	});
</script>

}



