@model Rocky.Models.ApplicationType



    <form method="post" asp-action="Edit">

        <input asp-for="Id" type="hidden" />
        <div class="border p-3 m-3 bg-white">

            <div asp-validation-summary="ModelOnly" class="text-danger" />

            <div class="form-group row">
                <h2 class="text-info pl-3">Edit Application Type</h2>
            </div>

            <div class="row bg-white">
                <div class="col-8">

                    <div class="form-group row py-2">
                        <div class="col-4">
                            <label asp-for="Name"></label>
                        </div>

                        <div class="col-8">
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row py-2">
                        <div class="col-8 offset-4 row">
                            <div class="col">
                                <input type="submit" class="btn btn-info w-100" value="Update" />
                            </div>

                            <div class="col">
                                <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt mx-2"></i>Back</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-4">
                    @* Keep this empty *@
                </div>
            </div>

        </div>
    </form>
