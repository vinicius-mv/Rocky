@model IEnumerable<ApplicationType>

<div class="container p-3 m-3 bg-white">
	<div class="row pt-4 py-2">
		<div class="col-6">
			<h2 class="text-primary">Application Types List</h2>
		</div>

		<div class="col-6 text-right">
			<a asp-action="Create" class="btn btn-primary float-end" />
				Create New Application Type
			</a>
		</div>
	</div>

	<br />
	<br />

	@if (Model.Count() > 0)
	{
		<table class="table table-bordered table-striped align-middle" style="width: 100%">
			<thead>
				<tr>
					<th>Name</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var category in Model)
				{
					<tr>
						<td width="60%">@category.Name</td>
						<td class=text-center>
							<a asp-route-id="@category.Id" asp-action="Edit" class="btn btn-primary">
								<i class="fas fa-edit mx-2"></i>
							</a>

							<a asp-route-id="@category.Id" asp-action="Delete" class="btn btn-danger">
								<i class="fas fa-trash-alt mx-2"></i>
							</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	}
	else
	{
		<p>No Application Type exists.</p>
	}
</div>